{
  "name": "fhevm-universal-sdk",
  "version": "1.0.0",
  "description": "Universal FHEVM SDK for building privacy-preserving dApps with any framework",
  "private": true,
  "workspaces": [
    "packages/*",
    "examples/*"
  ],
  "scripts": {
    "install:all": "npm install && npm run build:sdk",
    "build:sdk": "cd packages/fhevm-sdk && npm run build",
    "dev:nextjs": "cd examples/nextjs-voting && npm run dev",
    "dev:react": "cd examples/react-basic && npm run dev",
    "build:all": "npm run build:sdk && npm run build:examples",
    "build:examples": "cd examples/nextjs-voting && npm run build",
    "test": "npm run test --workspaces",
    "lint": "eslint packages examples",
    "format": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md}\"",
    "clean": "rm -rf node_modules packages/*/node_modules examples/*/node_modules"
  },
  "keywords": [
    "fhevm",
    "fhe",
    "encryption",
    "privacy",
    "zama",
    "sdk",
    "web3",
    "blockchain"
  ],
  "author": "FHEVM Community",
  "license": "MIT",
  "devDependencies": {
    "@types/node": "^20.0.0",
    "eslint": "^8.56.0",
    "prettier": "^3.2.4",
    "typescript": "^5.3.3"
  }
}
